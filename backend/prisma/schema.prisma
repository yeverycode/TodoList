generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  // 관계들
  todos  Todo[]
  events Event[]
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  done      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Event {
  id        Int      @id @default(autoincrement())
  title     String
  date      String // "YYYY-MM-DD"
  time      String? // "HH:mm"
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId Int
}
